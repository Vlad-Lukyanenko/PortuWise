@page "/learn/category/{categoryId:guid}/subcategory/{subcategoryId:guid}/lesson/words/{wordId:guid}"

@if (_wordResponse is not null)
{
    <nav class="mb-5" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/learn">Уроки</a></li>
            <li class="breadcrumb-item"><a href="/learn/category/@_wordResponse.ParentCategoryId">@_wordResponse.ParentCategoryTitle</a></li>
            <li class="breadcrumb-item"><a href="/learn/category/@_wordResponse.ParentCategoryId/subcategory/@_wordResponse.CategoryId/lesson">@_wordResponse.CategoryTitle</a></li>
            <li class="breadcrumb-item">@_wordResponse.Word.Pt</li>
        </ol>
    </nav>

    <div class="container">
        <div class="row g-4 justify-content-center">
            <!-- Каждая пара: слово + примеры -->
            <div class="col-lg-10 col-md-12">
                <div class="row g-3 align-items-stretch">
                    <!-- Левая колонка: изображение -->
                    <div class="col-md-4 text-center">
                        <div class="card h-100 p-3 d-flex align-items-center justify-content-center">
                            <img src="@_wordResponse.Word.ImagePath"
                                 class="mx-auto"
                                 style="max-width: 150px;"
                                 alt="Example Image" />
                        </div>
                    </div>


                    <!-- Правая колонка: примеры -->
                    <div class="col-md-8">
                        <div class="card h-100">
                            <div class="card-body text-center mt-2">

                                <!-- Португальский -->
                                <div class="mb-3">
                                    <h2 class="fw-bold display-6">@_wordResponse.Word.Pt</h2>
                                    <p class="text-muted mb-0">@_wordResponse.Word.PtTranscription</p>
                                </div>

                                <!-- Английский -->
                                <div class="mb-3">
                                    <h5 class="fw-bold mb-1">@_wordResponse.Word.Eng</h5>
                                    <p class="text-muted mb-0">@_wordResponse.Word.EngTranscription</p>
                                </div>

                                <!-- Русский -->
                                <div>
                                    <h5 class="fw-bold">@_wordResponse.Word.Rus</h5>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4" style="width: 90%;">
        @foreach (var p in _wordResponse.Word.Phrases)
        {
            <div style="background-color: #FFF; margin-bottom: 1em; padding: 0.6em 1em 0 1em; border-radius: 0.4em;">
                <div class="d-grid" style="grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 1em;">

                    <!-- Португальский -->
                    <div>
                        <h6 class="fw-bold text-secondary">pt:</h6>
                        <p class="fw-bold mb-0">@p.Pt</p>
                        <p class="mt-1">@p.PtTranscription</p>
                    </div>

                    <!-- Английский -->
                    <div>
                        <h6 class="fw-bold text-secondary">eng:</h6>
                        <p class="fw-bold mb-0">@p.Eng</p>
                        <p class="mt-1">@p.EngTranscription</p>
                    </div>

                    <!-- Русский -->
                    <div>
                        <h6 class="fw-bold text-secondary">ru:</h6>
                        <p class="fw-bold">@p.Rus</p>
                    </div>

                </div>
            </div>
        }
    </div>
}