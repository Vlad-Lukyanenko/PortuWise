@page "/learn/category/{categoryId:guid}"

@if (_subCategories != null && _subCategories.Any())
{
    <div class="row g-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/learn">Уроки</a></li>
                <li class="breadcrumb-item">@_subCategories[0].ParentTitle</li>
            </ol>
        </nav>
        @foreach (var c in _subCategories)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card box-shadow card-hover h-100">
                    <img src="@c.ImagePath" class="card-img-top" alt="Example Image">
                    <div class="card-body d-flex flex-column" style="border-top: 1px solid #ССС;">
                        <h5 class="card-title fw-bold text-center">@c.Title</h5>
                        <p class="card-text text-center">@c.Description</p>

                        <!-- Обертка с mt-auto, чтобы прижать кнопку вниз -->
                        <div class="mt-auto d-flex justify-content-center">
                            <a class="btn btn-outline-success ps-4 pe-4" href="/learn/category/@c.ParentId/subcategory/@c.Id/lesson">Открыть</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
