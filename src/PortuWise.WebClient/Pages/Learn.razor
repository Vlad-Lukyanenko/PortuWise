@page "/learn"

<PageTitle>PortuWise - learning materials</PageTitle>

<div class="row g-4">
    <h2 style="width: 100%; text-align: center;">Что будем учить сегодня?</h2>

    @foreach (var c in _categories)
    {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card box-shadow card-hover h-100">
                <img src="@c.ImagePath" class="card-img-top" alt="Example Image">
                <div class="card-body d-flex flex-column" style="border-top: 1px solid #949494;">
                    <h5 class="card-title fw-bold text-center">@c.Title</h5>
                    <p class="card-text text-center">@c.Description</p>

                    <!-- Обертка с mt-auto, чтобы прижать кнопку вниз -->
                    <div class="mt-auto d-flex justify-content-center">
                        <a class="btn btn-outline-success ps-4 pe-4" href="/learn/category/@c.Id">Открыть</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>